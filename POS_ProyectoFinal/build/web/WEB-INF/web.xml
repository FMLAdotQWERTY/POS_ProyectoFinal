<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletUsuario</servlet-name>
        <servlet-class>paq.ServletUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRecomendacion</servlet-name>
        <servlet-class>paq.ServletRecomendacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBusqueda</servlet-name>
        <servlet-class>paq.ServletBusqueda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInfo</servlet-name>
        <servlet-class>paq.ServletInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recomendacion</servlet-name>
        <servlet-class>paq.ServletRecomendacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUsuario</servlet-name>
        <url-pattern>/ServletUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRecomendacion</servlet-name>
        <url-pattern>/ServletRecomendacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBusqueda</servlet-name>
        <url-pattern>/ServletBusqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInfo</servlet-name>
        <url-pattern>/ServletInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recomendacion</servlet-name>
        <url-pattern>/Recomendacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
